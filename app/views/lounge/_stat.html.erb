<% user = stat %>
<% stat = user.stats.first %>
<div class="stat" id="stat-<%= stat.user.id %>">
	<div class="inner">
		<img src="images/avatars/nathan.jpg" width="30px" height="30px" />
		<div class="content">
			<h1><%= stat.user.login %><span> is working on</span></h1>
			<p><%= h stat.msg %></p>			
			<em><%= stat.created_at.strftime("%I:%m%p %b-%d") %></em>				
		</div>
		<br style="clear:both" />
	</div>
</div>
